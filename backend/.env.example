# backend/.env.example

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase

# JWT Settings
JWT_SECRET=your-super-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# SEC EDGAR API
SEC_USER_AGENT="Your Name your.email@example.com"

# Stock Data - Alpha Vantage (Fallback for Yahoo Finance)
# Get free API key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Finnhub (Phase 3.2 - Multi-source Failover)
# Get free API key: https://finnhub.io/register
FINNHUB_API_KEY=your-finnhub-api-key

# FRED Economic Data (Federal Reserve)
# Get free API key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key

# Scraper
# CDT (Central Daylight Time) - Dallas, TX timezone
SCRAPER_TIMEZONE=America/Chicago
SIGNIFICANT_TRADE_THRESHOLD=100000

# Scheduler (Automated Scraping - Phase 4)
SCHEDULER_ENABLED=true
SCRAPER_SCHEDULE_HOURS=0,4,8,12,16,20
SCRAPER_DAYS_BACK=30
SCRAPER_MAX_FILINGS=50
SCRAPER_COOLDOWN_HOURS=3

# Alerts
ALERTS_ENABLED=true
ALERT_CHECK_INTERVAL_MINUTES=5
MAX_ALERTS_PER_USER=50
ALERT_COOLDOWN_MINUTES=60

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_RETRY_COUNT=3

# Email (SendGrid)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=your-email@example.com
EMAIL_FROM_NAME="TradeSignal Alerts"

# Push Notifications (Web Push - Phase 5C)
# Generate VAPID keys: npx web-push generate-vapid-keys
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PUBLIC_KEY_BASE64=your-vapid-public-key-base64
VAPID_SUBJECT=mailto:your-email@example.com

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_ALERTS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Redis Cache (Phase 4.1)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:5174,http://localhost:5173,http://localhost:5175

# AI Configuration (Phase 6)
# Provider: "gemini" (default) or "openai"
AI_PROVIDER=gemini

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# OpenAI (Optional fallback)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Shared AI Settings
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
AI_CACHE_TTL_HOURS=24

# Stripe Payment Integration (Phase 8)
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# Stripe Price IDs (Monthly)
STRIPE_PRICE_BASIC=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# Stripe Price IDs (Yearly)
STRIPE_PRICE_BASIC_YEARLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx

# Frontend URL for Stripe redirects
FRONTEND_URL=http://localhost:5174