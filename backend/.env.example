# backend/.env.example

# === PostgreSQL Database ===
# Local:
DATABASE_URL=postgresql://user:password@localhost:5432/tradesignal
# Production (Supabase/AWS RDS):
# DATABASE_URL=postgresql://postgres:STRONG_PASSWORD@db.xxx.supabase.co:5432/postgres

# === Domain & CORS (tradesignal.capital) ===
# Allow requests from your domain
CORS_ORIGINS=https://tradesignal.capital,https://www.tradesignal.capital,http://localhost:3000
# Used for generating email links
FRONTEND_URL=https://tradesignal.capital
# Used for generating API links
API_URL=https://api.tradesignal.capital
# Cookie Domain (share cookies between subdomains)
COOKIE_DOMAIN=.tradesignal.capital

# === JWT Security ===
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === SEC Data ===
SEC_USER_AGENT="TradeSignalCapital contact@tradesignal.capital"

# === Stock Data APIs ===
ALPHA_VANTAGE_API_KEY=GET_FROM_ALPHA_VANTAGE
FINNHUB_API_KEY=GET_FROM_FINNHUB
FRED_API_KEY=GET_FROM_FRED

# === AI Configuration (LUNA) ===
AI_PROVIDER=gemini
GEMINI_API_KEY=GET_FROM_GOOGLE
GEMINI_MODEL=gemini-2.5-flash
ENABLE_AI_INSIGHTS=true

# === Email (SendGrid/Resend) ===
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=GET_FROM_PROVIDER
EMAIL_FROM=notifications@tradesignal.capital
EMAIL_FROM_NAME="TradeSignal Alerts"

# === Stripe Payments ===
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# === Redis Cache ===
REDIS_URL=redis://localhost:6379/0

# === Brokerage OAuth Redirects ===
ALPACA_REDIRECT_URI=https://api.tradesignal.capital/api/v1/brokerage/callback/alpaca
TD_AMERITRADE_REDIRECT_URI=https://api.tradesignal.capital/api/v1/brokerage/callback/td_ameritrade
